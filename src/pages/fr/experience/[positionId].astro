---
import PageLayout from "../../../layouts/PageLayout.astro";
import { Positions } from "../../../constants/positions";
import PositionDetails from "../../../components/position/PositionDetails";
import InitWrapper from "../../../components/wrappers/InitWrapper";
import { IsWeb3 } from "../../../stores/coreStore";

export function getStaticPaths() {
  return Positions.map((position) => ({
    params: { positionId: position.id },
  }));
}

const { positionId } = Astro.params;
---

<PageLayout>
  <InitWrapper env={import.meta.env} lang={Astro.currentLocale} client:load>
    <PositionDetails positionId={Number(positionId)} client:load />
  </InitWrapper>
</PageLayout>
